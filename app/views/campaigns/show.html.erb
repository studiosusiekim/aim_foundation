<% if @campaign.live %>
  <%= render 'live_campaign' %>
<% else %>
  <%= render 'not_live_campaign' %>
<% end %>

<% if @campaign.location.present? %>
  <div class="container">
    <div
      id="map"
      style="width: 100%;
        height: 300px;"
      data-marker="<%= @marker.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
<% end %>
